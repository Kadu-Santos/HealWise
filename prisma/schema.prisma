generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/wise.db"
}

model endereco {
  id          Int      @id @default(autoincrement())
  idCliente   Int
  rua         String
  numero      Int
  bairro      String
  cidade      String
  uf          String
  tipoMoradia Int?
  paciente    paciente @relation(fields: [idCliente], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model paciente {
  id                  Int        @id @default(autoincrement())
  cpf                 String     @unique(map: "sqlite_autoindex_paciente_1")
  name                String
  dataNascimento      String
  nMatricola          Int
  telefone            String?
  curs                String?
  turma               String?
  planoSaude          String?
  nomeResponsavel     String?
  telefoneResponsavel String?
  peso                Decimal?
  altura              Decimal?
  tipoSanguineo       String?
  sexo                String?
  nSus                Int
  endereco            endereco[]
}
